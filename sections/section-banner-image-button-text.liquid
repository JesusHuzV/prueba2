<section
  class='twcss-p twcss-m-auto twcss-max-w-[1920px] twcss-bg-cover twcss-py-[60px] lg:twcss-py-[90px]'
  style='background-image: url({{ section.settings.background | image_url }}); margin-bottom: {{ section.settings.margin_bottom }}px; margin-top: {{ section.settings.margin_top }}px;'
>
  <div class='twcss-grid-system'>
    <div class='twcss-hidden md:twcss-col-span-1 md:twcss-col-start-2 md:twcss-block lg:twcss-col-span-2 lg:twcss-col-start-2'>
      <img
        src='{{ section.settings.icon | image_url }}'
        loading='lazy'
        width='auto'
        height='auto'
        class='twcss-w-full'
      >
    </div>
    <div class='twcss-col-span-full twcss-text-center md:twcss-col-span-4 md:twcss-col-start-3 md:twcss-ml-4 md:twcss-text-start lg:twcss-col-span-7 lg:twcss-col-start-5'>
      <h2 class='twcss-typ-h1-title twcss-mb-[30px] twcss-uppercase twcss-text-primary lg:twcss-mb-[45px]'>
        {{ section.settings.text }}
      </h2>
      <a
        href='{{ section.settings.url }}'
        class='twcss-p-2 twcss-font-bold twcss-uppercase hover:twcss-border-b hover:twcss-border-primary lg:twcss-ml-4'
      >
        {{ section.settings.url_text -}}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner image button text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 36
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Image next to text"
    },
    {
      "type": "image_picker",
      "id": "background",
      "label": "Background"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Find a store near you"
    },
    {
      "type": "header",
      "content": "Url"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Url"
    },
    {
      "type": "text",
      "id": "url_text",
      "label": "Url text",
      "default": "Find your store"
    }
  ],

  "presets": [
    {
      "name": "Banner image button text"
    }
  ]
}
{% endschema %}
