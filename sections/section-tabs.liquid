<section
  class='tw-w-full tw-bg-[#] tw-py-10'
  style='margin-bottom: {{ section.settings.margin_bottom }}px; margin-top: {{ section.settings.margin_top }}px;'
>
  <div class='tw-grid-system'>
    <div class='tw-col-span-full tw-flex tw-flex-wrap tw-items-center tw-justify-center tw-border-b tw-border-border'>
      {% for link in section.settings.menu.links %}
        <a
          href='{{ link.url }}'
          class='tw-border-b-[2px] {% if link.current %} tw-border-primary {% else %} tw-border-transparent {% endif %} tw-p-[19px] tw-text-center'
        >
          <h5 class='tw-typ-h5-subtopic-3 tw-text-primary'>
            {{- link.title -}}
          </h5>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Tabs",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 36
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "name": "Question and answer",
      "type": "question_and_answer",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "text",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tabs"
    }
  ]
}
{% endschema %}
