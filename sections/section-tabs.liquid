<section
  class='twcss-w-full twcss-bg-[#] twcss-py-10'
  style='margin-bottom: {{ section.settings.margin_bottom }}px; margin-top: {{ section.settings.margin_top }}px;'
>
  <div class='twcss-grid-system'>
    <div class='twcss-col-span-full twcss-flex twcss-flex-wrap twcss-items-center twcss-justify-center twcss-border-b twcss-border-border'>
      {% for link in section.settings.menu.links %}
        <a
          href='{{ link.url }}'
          class='twcss-border-b-[2px] {% if link.current %} twcss-border-primary {% else %} twcss-border-transparent {% endif %} twcss-p-[19px] twcss-text-center'
        >
          <h5 class='twcss-typ-h5-subtopic-3 twcss-text-primary'>
            {{- link.title -}}
          </h5>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Tabs",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 36
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "name": "Question and answer",
      "type": "question_and_answer",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "text",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tabs"
    }
  ]
}
{% endschema %}
